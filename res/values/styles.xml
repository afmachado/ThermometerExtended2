<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StandardPaddedRootLayoutStyle">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="StandardRootLayoutStyle">
        <item name="android:gravity">top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SensorRowRootLayoutStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">@dimen/sensor_row_top_padding</item>
        <item name="android:paddingBottom">@dimen/sensor_row_bottom_padding</item>
    </style>

    <style name="SensorRowMainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/row_padding_top</item>
        <item name="android:paddingBottom">@dimen/row_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/row_padding_left</item>
        <item name="android:paddingRight">@dimen/row_padding_right</item>
        <item name="android:background">@drawable/sensor_row_background</item>
    </style>

    <style name="SensorRowIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">@string/sensor_icon_description</item>
    </style>

    <style name="SensorRowTitleTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SensorRowDataTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SensorRowBottomLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sensor_row_bottom_line_height</item>
        <item name="android:background">@color/sensor_row_bottom_line_color</item>
    </style>

</resources>